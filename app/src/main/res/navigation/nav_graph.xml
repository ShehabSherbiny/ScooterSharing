<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="dk.itu.moapd.scootersharing.ahga.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/show_start_ride_fragment"
            app:destination="@id/startFragment" />
        <action
            android:id="@+id/show_update_ride_fragment"
            app:destination="@id/stopFragment" />
        <action
            android:id="@+id/show_delete_ride_fragment"
            app:destination="@id/deleteFragment" />
    </fragment>
    <fragment
        android:id="@+id/startFragment"
        android:name="dk.itu.moapd.scootersharing.ahga.StartRideFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start_ride" >
        <action
            android:id="@+id/show_main_fragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/stopFragment"
        android:name="dk.itu.moapd.scootersharing.ahga.UpdateRideFragment"
        android:label="fragment_stop"
        tools:layout="@layout/fragment_update_ride" >
        <action
            android:id="@+id/show_main_fragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/deleteFragment"
        android:name="dk.itu.moapd.scootersharing.ahga.DeleteRideFragment"
        android:label="fragment_delete"
        tools:layout="@layout/fragment_delete_ride" >
        <action
            android:id="@+id/show_main_fragment"
            app:destination="@id/mainFragment" />
    </fragment>
</navigation>